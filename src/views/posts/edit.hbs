<div class="card card-body">
	<h3>Edit Post</h3>
	<form action="/posts/{{post._id}}?_method=PUT" method="POST">
		<input type="hidden" name="_method" value="PUT">
		<div class="form-group">
			<label for="title"> Title </label>
			<input type="text" name="title" class="form-control" value="{{post.title}}" required placeholder="Enter title">
		</div>
		<div class="form-group">
			<label for="description"> Description</label>
			<textarea name="description" class="form-control" required placeholder="Enter description">{{post.description}}</textarea>
		</div>
		<button type="submit" class="btn btn-success">Save</button>
	</form>
</div>